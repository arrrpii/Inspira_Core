    <script>
        function submitQuiz() {
            // Ensure all questions are answered
            const questions = document.querySelectorAll('.question');
            let valid = true;
    
            // Check if all questions have at least one radio button selected
            questions.forEach((question) => {
                const radios = question.querySelectorAll('input[type="radio"]');
                const isChecked = Array.from(radios).some(radio => radio.checked);
                
                if (!isChecked) {
                    valid = false;  // If any question isn't answered, set valid to false
                }
            });
    
            // If any question is unanswered, reload the page and show the alert
            if (!valid) {
                alert("Please answer all questions before submitting.");
                location.reload();  // Reload the page to give the user another chance to complete the quiz
                return;  // Prevent form submission
            }
    
            // If all questions are answered, calculate the course preferences
            const formElements = document.querySelectorAll('input[type="radio"]:checked');
            const courseScores = {
                "Mathematics for CS": 0,
                "Software Engineering Principles": 0,
                "Physics Made Simple": 0,
                "The Art of Illustration": 0,
                "Fundamentals of Business": 0
            };
    
            formElements.forEach((element) => {
                switch (element.value) {
                    case "Math":
                        courseScores["Mathematics for CS"]++;
                        break;
                    case "Software":
                        courseScores["Software Engineering Principles"]++;
                        break;
                    case "Physics":
                        courseScores["Physics Made Simple"]++;
                        break;
                    case "Art":
                        courseScores["The Art of Illustration"]++;
                        break;
                    case "Business":
                        courseScores["Fundamentals of Business"]++;
                        break;
                }
            });
    
            // Find the recommended course based on the highest score
            const recommendedCourse = Object.keys(courseScores).reduce((a, b) => courseScores[a] > courseScores[b] ? a : b);
    
            // Redirect to results page with the recommended course
            window.location.href = `/quiz_result?recommended_course=${recommendedCourse}`;
        }
    </script>

